---
import BaseHead from "@/components/BaseHead.astro";
import Footer from "@/components/Footer.astro";
import Header from "@/components/Header.astro";
import "@fontsource-variable/inter";
import "@fontsource-variable/roboto-serif";
import "@/styles/global.css";
import { SITE_TITLE, SITE_DESCRIPTION, SITE_IMAGE, SITE_LANG, BASE_PATH } from "@/config";

const {
  image = SITE_IMAGE,
  title = SITE_TITLE,
  description = SITE_DESCRIPTION,
  ogType = "website",
} = Astro.props;
---

<!doctype html>
<html lang={SITE_LANG}>
  <head>
    <base href={BASE_PATH} />
    <BaseHead
      title={title}
      description={description}
      image={image}
      ogType={ogType}
    />
  </head>
  <body class="animate-fade animate-duration-300 animate-delay-100">
    <Header />
    <main>
      <slot />
    </main>
    <Footer />
  </body>
</html>
